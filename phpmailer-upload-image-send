<script>
$(document).ready(function() {
	
	
	$("#question").submit(function() {
		 event.preventDefault();
		 
  var formData = new FormData($(this)[0]);

  $.ajax({
    url: "/send/send.phpxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    type: "POST",
    data: formData,
    success: function(response){  
                    $.colorbox({href: "#submitted", inline: true, open: true, closeButton: true});
                    window.setTimeout(function() {
                        $.colorbox.close();
                    }, 5000);
            },
    cache: false,
    contentType: false,
    processData: false
  });

  e.preventDefault();
});
});
</script>
